<Page x:Class="ATMapp.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATMapp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Frame Name="Menu" NavigationUIVisibility="Hidden"/>
        <Button x:Name="transferMoneyButton" Content="Transfer Money" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Height="48" Width="310" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="topUpBalanceButton" Content="Add Funds" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Height="48" Width="310" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="checkBalanceButton" Content="Check Balance" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="310" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="goBackButton" Content="Back" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Height="48" Width="310" FontSize="24" FontWeight="Bold" Click="Button_Click"/>

    </Grid>
</Page>
