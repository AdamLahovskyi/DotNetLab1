<Window x:Class="ATMwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATMwpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame Name="MainPage" NavigationUIVisibility="Hidden"/>
        <Button x:Name="authButton" Content="Log In" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Height="48" Width="310" Click="Button_Click" FontWeight="Bold" FontSize="24"/>
        <Image x:Name="logoimage" HorizontalAlignment="Center" Height="125" Margin="0,76,0,0" VerticalAlignment="Top" Width="554" Source="/View/PrivatBank-corporate-logo-latina.png"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Center" Margin="0,327,0,0" VerticalAlignment="Top" Height="48" Width="174" FontSize="24" FontWeight="Bold" Click="exitButton_Click"/>

    </Grid>
</Window>
